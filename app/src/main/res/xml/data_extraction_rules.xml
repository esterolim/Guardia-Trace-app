<?xml version="1.0" encoding="utf-8"?>
<!--
    Data extraction rules for Android 12+ (API 31+)
    Disables cloud backup for security reasons
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Disable all cloud backup for maximum security -->
        <exclude domain="root" />
        <exclude domain="database" />
        <exclude domain="sharedpref" />
        <exclude domain="file" />
        <exclude domain="external" />
    </cloud-backup>

    <device-transfer>
        <!-- Disable device-to-device transfer -->
        <exclude domain="root" />
        <exclude domain="database" />
        <exclude domain="sharedpref" />
        <exclude domain="file" />
    </device-transfer>
</data-extraction-rules>